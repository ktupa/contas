# Configuração de Produção - Financeiro Pro
# Copie este arquivo para backend/.env e ajuste os valores

# Database
DATABASE_URL=postgresql+asyncpg://financeiro:SENHA_FORTE_POSTGRES@db:5432/financeiro_pro

# JWT - IMPORTANTE: Gere uma chave forte!
# Execute: openssl rand -hex 32
SECRET_KEY=EXECUTE_openssl_rand_hex_32_E_COLE_AQUI
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# MinIO/S3
MINIO_ENDPOINT=minio:9000
MINIO_ACCESS_KEY=ALTERAR_USUARIO_MINIO
MINIO_SECRET_KEY=ALTERAR_SENHA_FORTE_MINIO
MINIO_BUCKET=financeiro-attachments
MINIO_SECURE=false

# App
APP_NAME=Financeiro Pro
ENVIRONMENT=production
LOG_LEVEL=INFO

# Retenção de dados (em dias)
AUDIT_LOG_RETENTION_DAYS=180
SESSION_RETENTION_DAYS=90

# CORS (ajustar para domínio correto)
ALLOWED_ORIGINS=https://contas.semppreonline.com.br
